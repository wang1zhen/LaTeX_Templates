\RequirePackage{lmodern}            %去除字体大小导致的warning


\RequirePackage{amsmath}            %数学公式包，花体大写\mathcal{}
\newcommand*{\dif}{\mathop{}\!\mathrm{d}}   %微分d
\newcommand*{\dx}{\mathop{}\!\mathrm{d}x}   %dx
\newcommand*{\dy}{\mathop{}\!\mathrm{d}y}   %dy
\newcommand*{\dz}{\mathop{}\!\mathrm{d}z}   %dz
\newcommand*{\dt}{\mathop{}\!\mathrm{d}t}   %dz
\newcommand*{\p}{\mathop{}\!\partial}       %偏微分partial

\RequirePackage{esint}              %带圈的积分 \varoiint \iiint
\RequirePackage{BOONDOX-cal}        %花体小（大）写字母，\mathcal{}
